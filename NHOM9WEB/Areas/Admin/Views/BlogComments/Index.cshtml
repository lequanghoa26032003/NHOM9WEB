@model IEnumerable<NHOM9WEB.Models.TbBlogComment>

<!DOCTYPE html>

<div>
    <div>
        <a asp-action="Create">
            <button type="button" class="btn btn-outline-success">
                Thêm mới
            </button>
        </a>
    </div>
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div style="background-color: #E2E3E5;" class="card-body">
                <h4 class="card-title">Danh sách danh mục</h4>

                <table class="table table-secondary">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên </th>
                            <th>SDT</th>
                            <th>Email</th>
                            <th>Ngày tạo</th>
                            <th>Nội dung</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                        }
                        @foreach (var item in Model) {
                            <tr class="table-secondary" id="tr_@item.CommentId">
                                <td>@(i++)</td>
                                <td>@item.Name</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.Detail</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.CommentId" class="btn btn-gradient-success btn-sm">Sửa</a> |
                                    <a asp-action="Details" asp-route-id="@item.CommentId" class="btn btn-gradient-dark btn-sm">Chi tiết</a> |
                                    <a asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-gradient-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

