@model NHOM9WEB.Models.TbMenu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card-body">
    <h1>Tạo danh mục</h1>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="MenuName" class="control-label">Name</label>
            <input asp-for="MenuName" class="form-control" placeholder="Enter Menu Name" />
            <span asp-validation-for="MenuName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsActive" class="control-label">Active</label>
            <select asp-for="IsActive" class="form-control">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ControllerName" class="control-label">Controller Name</label>
            <input asp-for="ControllerName" class="form-control" placeholder="Enter Controller Name" />
            <span asp-validation-for="ControllerName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ActionName" class="control-label">Action Name</label>
            <input asp-for="ActionName" class="form-control" placeholder="Enter Action Name" />
            <span asp-validation-for="ActionName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Levels" class="control-label">Levels</label>
            <input asp-for="Levels" class="form-control" placeholder="Enter Levels" />
            <span asp-validation-for="Levels" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ParentId" class="control-label">Parent Id</label>
            <input asp-for="ParentId" class="form-control" placeholder="Enter Parent Id" />
            <span asp-validation-for="ParentId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Link" class="control-label">Link</label>
            <input asp-for="Link" class="form-control" placeholder="Enter Link" />
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MenuOrder" class="control-label">Menu Order</label>
            <input asp-for="MenuOrder" class="form-control" placeholder="Enter Menu Order" />
            <span asp-validation-for="MenuOrder" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Position" class="control-label">Position</label>
            <input asp-for="Position" class="form-control" placeholder="Enter Position" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-gradient-primary me-2">Create</button>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-gradient-primary btn-fw"> <i class="mdi mdi-arrow-left-bold-circle-outline"></i>Trở về</a>
        </div>
    </form>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
